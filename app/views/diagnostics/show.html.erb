<div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
  <div class="mb-6 pb-4 border-b border-gray-200">
    <h1 class="text-2xl font-bold text-gray-800 mb-2">Diagnostic Results</h1>
    <div class="flex flex-col space-y-2">
      <h2 class="text-xl font-semibold text-gray-700">
        <%= "#{@diagnostic_session.vehicle_year} #{@diagnostic_session.vehicle_make} #{@diagnostic_session.vehicle_model}" %>
      </h2>
      <p class="text-sm text-gray-500">
        Generated on <%= @diagnostic_session.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
  </div>

  <div class="space-y-6">
    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Reported Symptoms</h3>
      <div class="prose prose-sm">
        <%= simple_format(@diagnostic_session.symptoms) %>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">AI Diagnostic Analysis</h3>
      <div class="prose prose-sm">
        <% if @diagnostic_session.diagnosis.present? %>
          <%= simple_format(@diagnostic_session.diagnosis) %>
        <% else %>
          <p class="text-gray-500">No diagnostic analysis available yet.</p>
        <% end %>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Recommended Actions</h3>
      <div class="prose prose-sm">
        <% if @diagnostic_session.recommendations.present? %>
          <%= simple_format(@diagnostic_session.recommendations) %>
        <% else %>
          <p class="text-gray-500">No recommendations available yet.</p>
        <% end %>
      </div>
    </div>

    <div class="bg-gray-50 rounded-lg p-6">
      <h3 class="text-xl font-semibold text-gray-700 mb-4">Additional Notes</h3>
      <div class="prose prose-sm">
        <% if @diagnostic_session.notes.present? %>
          <%= simple_format(@diagnostic_session.notes) %>
        <% else %>
          <p class="text-gray-500">No additional notes available.</p>
        <% end %>
      </div>
    </div>

    <div class="flex justify-center space-x-4 mt-6">
      <%= link_to 'New Diagnosis', new_diagnostic_path, class: 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors' %>
      <%= link_to 'Back to Dashboard', diagnostics_path, class: 'px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700 transition-colors' %>
    </div>
  </div>
</div>
